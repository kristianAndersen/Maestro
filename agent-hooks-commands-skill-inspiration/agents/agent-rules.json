{
  "version": "1.0",
  "description": "Agent activation rules for Maestro Conductor System. Agents are domain-level orchestrators that search and delegate to skills. Maestro searches agents first, agents then search skills.",
  "delegation_hierarchy": {
    "tier_0": "Maestro (Conductor) - Strategic 4-D, routes to agents",
    "tier_1": "Agents (Domain Orchestrators) - Domain-level coordination, routes to skills",
    "tier_2": "Skills (Operation Orchestrators) - Tactical 4-D, routes to micro-skills",
    "tier_3": "Micro-Skills (Musicians) - Pure execution, no routing"
  },
  "agents": {
    "file-operations-agent": {
      "type": "domain-coordinator",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Coordinates all file operations - reading, writing, organizing, searching. Delegates to file-reader, file-writer, file-organizer skills based on operation type.",
      "domain": "file-operations",
      "skillRegistry": ".claude/skills/skill-rules.json",
      "delegatesTo": [
        "file-writer",
        "file-reader",
        "file-opener",
        "file-organizer"
      ],
      "agentPath": ".claude/agents/file-operations-agent.md",
      "promptTriggers": {
        "keywords": [
          "file",
          "files",
          "read file",
          "write file",
          "save file",
          "open file",
          "organize files",
          "file operations",
          "file system",
          "manage files"
        ],
        "intentPatterns": [
          "(read|write|save|open|create|delete|move|copy|organize).*(file|files)",
          "(file|files).*(operation|management|system)",
          "work with.*(file|files)"
        ],
        "domainIndicators": [
          "file paths mentioned",
          "file extensions (.json, .md, .txt, etc.)",
          "directory paths",
          "file content referenced"
        ]
      },
      "capabilities": [
        "file-reading",
        "file-writing",
        "file-organization",
        "file-search",
        "file-validation",
        "backup-management",
        "batch-operations"
      ],
      "delegation_strategy": {
        "description": "Routes to appropriate skill based on operation type",
        "routing_logic": {
          "write_operations": "file-writer skill",
          "read_operations": "file-reader skill",
          "search_operations": "file-opener skill",
          "organization": "file-organizer skill"
        }
      }
    },
    "code-development-agent": {
      "type": "domain-coordinator",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Coordinates software development tasks - code analysis, testing, refactoring, debugging. Delegates to code-analysis, test-runner, refactoring skills.",
      "domain": "software-development",
      "skillRegistry": ".claude/skills/skill-rules.json",
      "delegatesTo": [
        "code-analysis",
        "test-driven-development",
        "systematic-debugging",
        "refactoring-assistant"
      ],
      "agentPath": ".claude/agents/code-development-agent.md",
      "promptTriggers": {
        "keywords": [
          "code",
          "programming",
          "debug",
          "test",
          "refactor",
          "implement",
          "fix bug",
          "write code",
          "code review",
          "analyze code"
        ],
        "intentPatterns": [
          "(write|implement|create|build).*(code|function|class|feature)",
          "(debug|fix|solve).*(bug|error|issue|problem)",
          "(test|verify|validate).*(code|function|implementation)",
          "(analyze|review|check).*(code|implementation)"
        ],
        "domainIndicators": [
          "programming language mentioned",
          "code snippets present",
          "technical terms (function, class, variable, etc.)",
          "testing terminology"
        ]
      },
      "capabilities": [
        "code-analysis",
        "debugging",
        "test-creation",
        "refactoring",
        "code-review",
        "implementation-guidance"
      ],
      "delegation_strategy": {
        "description": "Routes to appropriate skill based on development task",
        "routing_logic": {
          "analysis": "code-analysis skill",
          "testing": "test-driven-development skill",
          "debugging": "systematic-debugging skill",
          "refactoring": "refactoring-assistant skill"
        }
      }
    },
    "content-creation-agent": {
      "type": "domain-coordinator",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Coordinates content creation and analysis - marketing copy, documentation, blog posts. Delegates to content-analysis, writing-assistant skills.",
      "domain": "content-marketing",
      "skillRegistry": ".claude/skills/skill-rules.json",
      "delegatesTo": [
        "content-analysis",
        "writing-assistant",
        "seo-optimizer",
        "brand-voice-checker"
      ],
      "agentPath": ".claude/agents/content-creation-agent.md",
      "promptTriggers": {
        "keywords": [
          "content",
          "marketing",
          "blog",
          "documentation",
          "copy",
          "write",
          "brand voice",
          "SEO",
          "messaging",
          "audience"
        ],
        "intentPatterns": [
          "(write|create|draft).*(content|copy|blog|documentation|article)",
          "(analyze|review|check).*(content|copy|message|brand voice)",
          "(optimize|improve).*(SEO|content|messaging)"
        ],
        "domainIndicators": [
          "marketing terminology",
          "SEO concepts",
          "brand/audience mentions",
          "content strategy terms"
        ]
      },
      "capabilities": [
        "content-analysis",
        "brand-voice-consistency",
        "seo-optimization",
        "audience-targeting",
        "messaging-clarity"
      ],
      "delegation_strategy": {
        "description": "Routes to appropriate skill based on content task",
        "routing_logic": {
          "analysis": "content-analysis skill",
          "writing": "writing-assistant skill",
          "seo": "seo-optimizer skill",
          "brand": "brand-voice-checker skill"
        }
      }
    },
    "data-operations-agent": {
      "type": "domain-coordinator",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Coordinates data operations - validation, transformation, analysis, quality checks. Delegates to data-validation, data-transform, data-analysis skills.",
      "domain": "data-engineering",
      "skillRegistry": ".claude/skills/skill-rules.json",
      "delegatesTo": [
        "data-validation",
        "data-transform",
        "data-analysis",
        "schema-validator"
      ],
      "agentPath": ".claude/agents/data-operations-agent.md",
      "promptTriggers": {
        "keywords": [
          "data",
          "dataset",
          "CSV",
          "JSON",
          "database",
          "validate",
          "transform",
          "analyze data",
          "data quality",
          "schema"
        ],
        "intentPatterns": [
          "(validate|verify|check).*(data|dataset|CSV|JSON)",
          "(transform|convert|process).*(data|dataset)",
          "(analyze|examine).*(data|dataset|metrics)",
          "(data).*(quality|integrity|validation)"
        ],
        "domainIndicators": [
          "data formats (CSV, JSON, SQL)",
          "data quality terms",
          "schema/structure mentions",
          "statistical terms"
        ]
      },
      "capabilities": [
        "data-validation",
        "data-transformation",
        "schema-compliance",
        "quality-assessment",
        "anomaly-detection"
      ],
      "delegation_strategy": {
        "description": "Routes to appropriate skill based on data task",
        "routing_logic": {
          "validation": "data-validation skill",
          "transformation": "data-transform skill",
          "analysis": "data-analysis skill",
          "schema": "schema-validator skill"
        }
      }
    }
  },
  "routing_protocol": {
    "description": "How Maestro uses this registry",
    "workflow": [
      "1. Maestro receives user request",
      "2. Maestro searches agent-rules.json for matching agent",
      "3. If agent found → Delegate to agent with Strategic 4-D",
      "4. Agent searches skill-rules.json for matching skill",
      "5. If skill found → Delegate to skill with Domain Direction",
      "6. Skill searches for micro-skills and orchestrates",
      "7. Results bubble up: Micro-skill → Skill → Agent → Maestro → User"
    ],
    "fallback": "If no agent matches, Maestro searches skill-rules.json directly (backwards compatible)"
  },
  "agent_template": {
    "name": "agent-name",
    "type": "domain-coordinator",
    "enforcement": "suggest | block | warn",
    "priority": "critical | high | medium | low",
    "description": "What this agent coordinates",
    "domain": "domain-name",
    "skillRegistry": ".claude/skills/skill-rules.json",
    "delegatesTo": ["skill-1", "skill-2"],
    "agentPath": ".claude/agents/{agent-name}.md",
    "promptTriggers": {
      "keywords": [],
      "intentPatterns": [],
      "domainIndicators": []
    },
    "capabilities": [],
    "delegation_strategy": {
      "description": "How agent routes to skills",
      "routing_logic": {}
    }
  },
  "notes": {
    "architecture": "Four-tier hierarchy: Maestro → Agents → Skills → Micro-Skills",
    "agent_purpose": "Agents coordinate domain-level work and delegate to specialized skills",
    "skill_purpose": "Skills orchestrate operations using micro-skills",
    "micro_skill_purpose": "Micro-skills execute single operations",
    "ai_fluency_modes": {
      "maestro": "Agency (autonomous orchestration)",
      "agents": "Agency (domain-level autonomy)",
      "skills": "Augmentation (collaborative refinement)",
      "micro_skills": "Automation (deterministic execution)"
    },
    "customization": "Add project-specific agents for your domain (e.g., ml-training-agent, api-development-agent, infrastructure-agent)"
  }
}
