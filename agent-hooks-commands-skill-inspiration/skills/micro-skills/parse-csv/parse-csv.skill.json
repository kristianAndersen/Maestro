{
  "name": "parse-csv",
  "version": "1.0.0",
  "description": "Pure execution micro-skill that parses CSV strings into arrays of objects. Handles delimiter detection, header parsing, quoted fields, escaped characters, and provides row-level error reporting.",
  "type": "micro-skill",
  "tier": 3,
  "model": "haiku",
  "allowed_tools": [],
  "capabilities": [
    "csv-parsing",
    "delimiter-detection",
    "header-parsing",
    "quoted-fields",
    "row-error-reporting"
  ],
  "input": {
    "type": "object",
    "properties": {
      "csv_string": {
        "type": "string",
        "description": "CSV string to parse (required)"
      },
      "delimiter": {
        "type": "string",
        "description": "Field delimiter. Default: auto-detect",
        "optional": true
      },
      "has_header": {
        "type": "boolean",
        "description": "First row is header. Default: true",
        "default": true,
        "optional": true
      },
      "skip_empty_lines": {
        "type": "boolean",
        "description": "Skip blank rows. Default: true",
        "default": true,
        "optional": true
      },
      "quote_char": {
        "type": "string",
        "description": "Quote character. Default: '\"'",
        "default": "\"",
        "optional": true
      },
      "trim_fields": {
        "type": "boolean",
        "description": "Trim whitespace from fields. Default: true",
        "default": true,
        "optional": true
      }
    }
  },
  "output": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether parse succeeded"
      },
      "data": {
        "type": "array",
        "description": "Parsed rows as array of objects (if successful)",
        "optional": true
      },
      "metadata": {
        "type": "object",
        "properties": {
          "rows": {
            "type": "number",
            "description": "Number of data rows"
          },
          "columns": {
            "type": "number",
            "description": "Number of columns"
          },
          "delimiter": {
            "type": "string",
            "description": "Detected/used delimiter"
          },
          "headers": {
            "type": "array",
            "description": "Column headers (if has_header)",
            "optional": true
          },
          "skipped_rows": {
            "type": "number",
            "description": "Empty/error rows skipped"
          }
        }
      },
      "error": {
        "type": "object",
        "description": "Error details with row-level context",
        "optional": true,
        "properties": {
          "code": {
            "type": "string",
            "description": "Error code (ROW_PARSE_ERROR, COLUMN_MISMATCH, etc.)"
          },
          "message": {
            "type": "string",
            "description": "Human-readable message"
          },
          "context": {
            "type": "object",
            "description": "Row number, content, column info"
          },
          "suggestion": {
            "type": "string",
            "description": "What might fix it"
          }
        }
      }
    }
  },
  "invocation_patterns": [
    "Parse CSV string",
    "Convert CSV to array",
    "Parse tabular data",
    "Load CSV file data"
  ],
  "error_handling": {
    "autonomous_retry": {
      "ROW_PARSE_ERROR": {
        "attempts": 2,
        "backoff": "immediate",
        "delays_ms": [0, 0]
      }
    },
    "context_aware_escalation": [
      "ROW_PARSE_ERROR",
      "COLUMN_MISMATCH",
      "DELIMITER_UNKNOWN",
      "EMPTY_CSV",
      "TOO_MANY_ERRORS",
      "UNCLOSED_QUOTE"
    ],
    "delimiter_detection": {
      "auto_detect": true,
      "supported_delimiters": [",", "\t", ";", "|"],
      "fallback": "comma"
    }
  },
  "keywords": [
    "parse",
    "csv",
    "tsv",
    "tabular",
    "delimiter",
    "spreadsheet"
  ],
  "domain": "data-operations",
  "role": "musician",
  "orchestration": false,
  "methodology": "none",
  "author": "Maestro System",
  "license": "MIT"
}
