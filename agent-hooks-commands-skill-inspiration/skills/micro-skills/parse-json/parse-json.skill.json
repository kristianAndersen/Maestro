{
  "name": "parse-json",
  "version": "1.0.0",
  "description": "Pure execution micro-skill that parses JSON strings into objects. Handles syntax errors with detailed location information, validates structure, supports relaxed parsing modes, and provides rich error context.",
  "type": "micro-skill",
  "tier": 3,
  "model": "haiku",
  "allowed_tools": [],
  "capabilities": [
    "json-parsing",
    "syntax-validation",
    "error-location",
    "depth-checking",
    "format-detection"
  ],
  "input": {
    "type": "object",
    "properties": {
      "json_string": {
        "type": "string",
        "description": "JSON string to parse (required)"
      },
      "strict": {
        "type": "boolean",
        "description": "Strict mode (reject trailing commas, comments). Default: true",
        "default": true,
        "optional": true
      },
      "max_depth": {
        "type": "number",
        "description": "Maximum nesting depth. Default: 100",
        "default": 100,
        "optional": true
      }
    }
  },
  "output": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether parse succeeded"
      },
      "data": {
        "type": "any",
        "description": "Parsed object (if successful)",
        "optional": true
      },
      "metadata": {
        "type": "object",
        "properties": {
          "size": {
            "type": "number",
            "description": "Original string size in bytes"
          },
          "depth": {
            "type": "number",
            "description": "Object nesting depth"
          },
          "keys_count": {
            "type": "number",
            "description": "Number of keys (if object)",
            "optional": true
          },
          "array_length": {
            "type": "number",
            "description": "Array length (if array)",
            "optional": true
          }
        }
      },
      "error": {
        "type": "object",
        "description": "Error details with location and context",
        "optional": true,
        "properties": {
          "code": {
            "type": "string",
            "description": "Error code (PARSE_ERROR, INVALID_JSON, etc.)"
          },
          "message": {
            "type": "string",
            "description": "Human-readable message"
          },
          "context": {
            "type": "object",
            "description": "Error location and diagnostic info"
          },
          "suggestion": {
            "type": "string",
            "description": "What might fix it"
          }
        }
      }
    }
  },
  "invocation_patterns": [
    "Parse JSON string",
    "Convert JSON to object",
    "Validate JSON syntax",
    "Parse configuration file"
  ],
  "error_handling": {
    "autonomous_retry": {
      "PARSE_ERROR": {
        "attempts": 2,
        "backoff": "immediate",
        "delays_ms": [0, 0]
      }
    },
    "context_aware_escalation": [
      "PARSE_ERROR",
      "INVALID_JSON",
      "MAX_DEPTH",
      "EMPTY_INPUT"
    ],
    "error_location": {
      "provides": ["position", "line", "column", "near_text"],
      "helpful_for": "identifying exact syntax error location"
    }
  },
  "keywords": [
    "parse",
    "json",
    "deserialize",
    "convert",
    "syntax"
  ],
  "domain": "data-operations",
  "role": "musician",
  "orchestration": false,
  "methodology": "none",
  "author": "Maestro System",
  "license": "MIT"
}
