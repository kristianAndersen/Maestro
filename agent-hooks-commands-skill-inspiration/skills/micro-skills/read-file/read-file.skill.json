{
  "name": "read-file",
  "version": "1.0.0",
  "description": "Pure execution micro-skill that reads file content from disk. Handles file locks with automatic retry, supports multiple encodings, provides streaming for large files. Smart error handling with context-aware escalation.",
  "type": "micro-skill",
  "tier": 3,
  "model": "haiku",
  "allowed_tools": ["Read"],
  "capabilities": [
    "file-read",
    "encoding-support",
    "auto-retry",
    "error-context"
  ],
  "input": {
    "type": "object",
    "description": "File read parameters",
    "properties": {
      "file_path": {
        "type": "string",
        "description": "Absolute path to file (required)"
      },
      "encoding": {
        "type": "string",
        "description": "File encoding (default: 'utf-8')",
        "default": "utf-8",
        "optional": true
      },
      "max_size": {
        "type": "number",
        "description": "Max bytes to read (safety limit)",
        "optional": true
      },
      "offset": {
        "type": "number",
        "description": "Start reading from byte position",
        "optional": true
      },
      "length": {
        "type": "number",
        "description": "Number of bytes to read",
        "optional": true
      }
    }
  },
  "output": {
    "type": "object",
    "description": "Structured read result",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether read succeeded"
      },
      "content": {
        "type": "string",
        "description": "File content (if successful)",
        "optional": true
      },
      "size": {
        "type": "number",
        "description": "Bytes read"
      },
      "encoding": {
        "type": "string",
        "description": "Encoding used"
      },
      "error": {
        "type": "object",
        "description": "Error details with context and suggestions",
        "optional": true,
        "properties": {
          "code": {
            "type": "string",
            "description": "Error code (ENOENT, EACCES, etc.)"
          },
          "message": {
            "type": "string",
            "description": "Human-readable message"
          },
          "context": {
            "type": "object",
            "description": "Additional context for recovery"
          },
          "suggestion": {
            "type": "string",
            "description": "What might fix it"
          }
        }
      }
    }
  },
  "invocation_patterns": [
    "Read file with default encoding",
    "Read file with specific encoding",
    "Read partial file (offset + length)",
    "Read with size limit"
  ],
  "error_handling": {
    "autonomous_retry": {
      "EBUSY": {
        "attempts": 3,
        "backoff": "exponential",
        "delays_ms": [0, 100, 200]
      },
      "EACCES": {
        "attempts": 2,
        "backoff": "linear",
        "delays_ms": [0, 50]
      }
    },
    "context_aware_escalation": [
      "ENOENT",
      "FILE_TOO_LARGE",
      "INVALID_ENCODING",
      "EISDIR",
      "EMFILE",
      "ENAMETOOLONG"
    ]
  },
  "keywords": [
    "read",
    "file",
    "disk",
    "content",
    "load"
  ],
  "domain": "file-system-operations",
  "role": "musician",
  "orchestration": false,
  "methodology": "none",
  "author": "Maestro System",
  "license": "MIT"
}
