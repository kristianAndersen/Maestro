{
  "name": "content-analysis",
  "version": "1.0.0",
  "description": "Marketing content analysis orchestrator with domain expertise in brand voice, messaging, SEO, readability, and audience engagement. Analyzes content quality and provides strategic recommendations.",
  "type": "skill",
  "tier": 2,
  "model": "sonnet",
  "capabilities": [
    "content-analysis",
    "brand-voice-audit",
    "seo-optimization",
    "readability-assessment",
    "tone-detection",
    "messaging-effectiveness",
    "audience-engagement",
    "content-strategy"
  ],
  "input": {
    "type": "object",
    "description": "Content analysis request with scope and focus",
    "properties": {
      "goal": {
        "type": "string",
        "description": "What to analyze (e.g., 'Audit blog posts for brand voice')"
      },
      "scope": {
        "type": "string",
        "description": "Content files or pattern (e.g., 'content/blog/*.md')"
      },
      "focus": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["brand-voice", "tone", "messaging", "seo", "readability", "engagement"]
        },
        "description": "Analysis focus areas"
      },
      "standards": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Standards to verify against (e.g., ['Brand guidelines', 'SEO best practices'])",
        "optional": true
      },
      "target_audience": {
        "type": "string",
        "description": "Target audience for readability assessment",
        "optional": true
      }
    }
  },
  "output": {
    "type": "object",
    "description": "Content analysis report with findings and recommendations",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether analysis completed successfully"
      },
      "analysis": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "string",
            "description": "High-level summary of findings"
          },
          "brand_consistency_score": {
            "type": "number",
            "description": "Brand consistency score (0-10)"
          },
          "seo_average_score": {
            "type": "number",
            "description": "Average SEO score (0-100)"
          },
          "findings": {
            "type": "array",
            "description": "Specific issues with evidence and recommendations"
          },
          "recommendations": {
            "type": "array",
            "description": "Strategic recommendations to improve content"
          }
        }
      },
      "metadata": {
        "type": "object",
        "properties": {
          "posts_analyzed": {
            "type": "number"
          },
          "total_word_count": {
            "type": "number"
          },
          "duration_ms": {
            "type": "number"
          }
        }
      }
    }
  },
  "invocation_patterns": [
    "Analyze blog posts for brand consistency",
    "Audit landing pages for SEO",
    "Check content readability",
    "Review marketing materials for tone",
    "Optimize content for search engines",
    "Assess messaging effectiveness",
    "Compare high vs low performing content"
  ],
  "delegates_to": [
    "read-file",
    "extract-text",
    "detect-tone",
    "analyze-sentiment",
    "check-seo",
    "calculate-readability",
    "detect-hooks",
    "format-output"
  ],
  "methodology": "tactical-4d",
  "domain_expertise": {
    "areas": [
      "Marketing Strategy",
      "Brand Voice",
      "Content Strategy",
      "SEO Optimization",
      "Copywriting",
      "Audience Engagement"
    ],
    "standards": [
      "Brand Guidelines",
      "SEO Best Practices",
      "Content Marketing Standards",
      "Readability Guidelines"
    ]
  },
  "analysis_chains": {
    "brand_voice": [
      "read-file (parallel)",
      "extract-text",
      "detect-tone",
      "analyze-sentiment",
      "compare-to-guidelines",
      "format-output"
    ],
    "seo": [
      "read-file (parallel)",
      "extract-text",
      "check-seo",
      "calculate-readability",
      "detect-patterns",
      "format-output"
    ],
    "engagement": [
      "read-file (parallel)",
      "extract-text",
      "analyze-sentiment",
      "calculate-readability",
      "detect-hooks",
      "format-output"
    ]
  },
  "keywords": [
    "content",
    "marketing",
    "brand",
    "voice",
    "tone",
    "seo",
    "readability",
    "messaging",
    "engagement",
    "copy",
    "audit",
    "optimize"
  ],
  "domain": "marketing-content",
  "error_recovery_levels": 5,
  "author": "Maestro System",
  "license": "MIT"
}
