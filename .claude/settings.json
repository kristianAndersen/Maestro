{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "hooks/maestro-agent-suggester.js"
          },
          {
            "type": "command",
            "command": "hooks/subagent-skill-discovery.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/work-tracker.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "hooks/evaluation-reminder.js"
          }
        ]
      }
    ]
  }
}