{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-initializer.js"
          },
          {
            "type": "command",
            "command": ".claude/hooks/maestro-agent-suggester.js"
          },
          {
            "type": "command",
            "command": ".claude/hooks/subagent-skill-discovery.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|write_file|replace",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/work-tracker.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/context-tracker.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/evaluation-reminder.js"
          },
          {
            "type": "command",
            "command": ".claude/hooks/enforce-4d-evaluation.js"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-persister.js"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-finalizer.js"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-persister.js"
          }
        ]
      }
    ]
  }
}
